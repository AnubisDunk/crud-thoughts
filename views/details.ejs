<%- include('partials/head') %>
    <div class="card me-3 my-3 align-content-start shadow-lg" role="button"
        onclick="location.href='/thoughts/<%= thought.id %>'">
        <div class="card-header text-end">
            id: <%= thought.id%>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p class="fs-2">
                    <%= thought.text%>
                </p>
                <footer class="blockquote-footer">
                    <%= thought.username %> <cite class="text-end" title="Source Title"> <br>
                    </cite>
                    <div class="fst-italic text-end">
                        <% if (thought.createdAt.toString() != thought.updatedAt.toString()) { %>
                            Modified: <%= thought.updatedAt.toLocaleString('lv-LV') %>  <br>
                         <% } %>
                         Created: <%= thought.createdAt.toLocaleString('lv-LV') %>
                    </div>
                      
                </footer>
            </blockquote>
        </div>
    </div>
    
        <button class="btn btn-warning" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample"
            aria-expanded="false" aria-controls="collapseWidthExample">
            Edit
        </button>
    
    <div class="collapse mb-3" id="collapseWidthExample">
        <div class="card card-body" style="width: 300px;">
            <form class="row g-3" action="/thoughts/<%= thought.id %>/?_method=PATCH" method="post">
                <div class="mb-3">
                    <label for="text" class="form-label">Thought</label>
                    <textarea class="form-control" name="text" id="text" rows="3"
                        required><%= thought.text %></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary mb-3">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <a href="/" class="btn btn-primary " tabindex="-1" role="button" aria-disabled="true">Back</a>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Delete
    </button>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    You are gonna delete this!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form action="/thoughts/<%= thought.id %>/?_method=DELETE" method="post">
                        <button class="btn btn-danger" type="submit"> Delete</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>